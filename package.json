{
  "name": "@scalvert/link-pkg",
  "version": "0.0.1",
  "description": "Link another package's tarball to this package",
  "keywords": [
    "link",
    "link-package"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scalvert/link-pkg.git"
  },
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "index.js",
  "bin": "bin/link-pkg",
  "scripts": {
    "test": "test"
  },
  "dependencies": {
    "execa": "^7.1.1",
    "log-symbols": "^5.1.0",
    "meow": "^12.0.1"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "release-it": "^15.5.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "volta": {
    "node": "16.20.0",
    "npm": "9.6.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
